@page
@using SailClubLibrary.Models
@model RazorBoatApp2026.Pages.Bookings.CreateBookingModel
@{
	ViewData["Title"] = "Create booking";
}

<h1>Create booking</h1>

<form method="post">
	<input type="hidden" asp-for="NewBooking.SailCompleted" value="false" />
	<div class="form-group">
		<label asp-for="@Model.NewBooking.Id" class="control-label"></label>
		<input asp-for="@Model.NewBooking.Id" readonly class="form-control" />
		<span asp-validation-for="@Model.NewBooking.Id" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.NewBooking.StartDate" class="control-label"></label>
		<input asp-for="@Model.NewBooking.StartDate" class="form-control" />
		<span asp-validation-for="@Model.NewBooking.StartDate" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="@Model.NewBooking.EndDate" class="control-label"></label>
		<input asp-for="@Model.NewBooking.EndDate" class="form-control" />
		<span asp-validation-for="@Model.NewBooking.EndDate" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="@Model.NewBooking.Destination" class="control-label"></label>
		<input asp-for="@Model.NewBooking.Destination" class="form-control" />
		<span asp-validation-for="@Model.NewBooking.Destination" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SelectedMemberPhoneNumber" class="control-label">Member</label>
		<select asp-for="SelectedMemberPhoneNumber" asp-items="Model.MemberOptions" class="form-control">
			<option value="">-- Select a Member --</option>
		</select>
		<span asp-validation-for="SelectedMemberPhoneNumber" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SelectedBoatSailNumber" class="control-label">Boat</label>
		<select asp-for="SelectedBoatSailNumber" asp-items="Model.BoatOptions" class="form-control">
			<option value="">-- Select a Boat --</option>
		</select>
		<span asp-validation-for="SelectedBoatSailNumber" class="text-danger"></span>
	</div>

	<div class="form-group mt-2">
		<input type="submit" value="Save" class="btn btn-outline-success" />
		<a asp-page="index" class="btn btn-outline-secondary">Cancel</a>
	</div>
</form>